<% layout("/layouts/boilerplate") %>
<body>
    <div class="container mt-4">
        <h1>Upload Video</h1>
        <form action="/resource/workshops" method="POST" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input name="notice[title]" placeholder="Enter the title" type="text" class="form-control" required />
            </div>
        
            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <textarea name="notice[description]" placeholder="Enter the description" class="form-control" required></textarea>
            </div>
        
            <div class="mb-3">
                <label for="link" class="form-label">Attach the file link</label>
                <input name="notice[link]" placeholder="Enter the file link" type="text" class="form-control" />
            </div>
        
            <div class="mb-3">
                <label for="thumbnail" class="form-label">Upload Thumbnail</label>
                <input name="thumbnail" type="file" class="form-control" accept="image/*" required />
            </div>
        
            <button class="btn btn-primary">Publish</button>
        </form>
        
    </div>
</body>
