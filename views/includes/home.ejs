    <style>
        /* Fullscreen Video */
        .bg-video-container {
            position: relative;
            min-height: 100vh;
            overflow: hidden;
        }

        #background-video {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            object-fit: cover;
            z-index: 1;
        }

        .bg-video-container .container {
            z-index: 2;
            position: relative;
            color: white;
        }

        .bg-video-container::after {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.5); /* Add dark overlay for readability */
            z-index: 1;
        }
    </style>
