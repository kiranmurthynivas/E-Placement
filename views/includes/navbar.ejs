<style>
  /* General Styles */
  .navbar {
    position: fixed;
    top: 0;
    width: 100%;
    z-index: 1030;
    background-color: #f8f9fa;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
  }

  body {
    padding-top: 80px;
  }

  .logo {
    width: 50px;
    height: auto;
  }

  /* Profile Section Styling */
  .profile-section .dropdown-menu {
    min-width: 200px;
    border-radius: 0.25rem;
    box-shadow: 0 0.25rem 0.75rem rgba(0, 0, 0, 0.1);
    padding: 0.5rem;
  }

  .profile-section .btn {
    width: 100%;
    font-size: 14px;
    text-align: left;
    margin-bottom: 0.5rem;
  }

  /* Responsive Design */
  @media (max-width: 767px) {
    .profile-section .btn {
      font-size: 13px;
    }
  }
</style>

<div id="nav">
  <nav class="navbar navbar-expand-md">
    <div class="container-fluid">
      <a class="navbar-brand" href="/notice">
        <img class="logo" src="/images/smvitlogo.jpg" alt="logo">
      </a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="/home">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/notice">Notice Board</a>
          </li>
          <li class="nav-item dropdown">
            <a class="dropdown-toggle nav-link" href="#" id="navbarDropdownResources" role="button" data-bs-toggle="dropdown" aria-expanded="false">
              Resources
            </a>
            <ul class="dropdown-menu" aria-labelledby="navbarDropdownResources">
              <li><a class="dropdown-item" href="/resource/workshops">Workshops</a></li>
              <li><a class="dropdown-item" href="/resource/roadmaps">Roadmaps</a></li>
            </ul>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="https://www.sirmvit.edu/placement/">About us</a>
          </li>
        </ul>

        <!-- Separate Section for Student Registration and Mentor -->
        <div class="d-flex ms-auto">
          <form action="/student/signup" method="GET" class="me-3">
            <button type="submit" class="btn btn-danger">Student Registration</button>
          </form>
          <div class="profile-section dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownProfile" role="button" data-bs-toggle="dropdown" aria-expanded="false">
              Mentor
            </a>
            <ul class="dropdown-menu" aria-labelledby="navbarDropdownProfile">
              <% if (!currUser) { %>
                <li>
                  <a href="/mentor/login" class="btn btn-info">Login</a>
                </li>
              <% } else { %>
                <li>
                  <form action="/logout" method="GET">
                    <button type="submit" class="btn btn-danger">Logout</button>
                  </form>
                </li>
              <% } %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </nav>
</div>

