<% layout("/layouts/boilerplate") %>

<body>
    <!-- Roadmaps Section -->
    <div class="container roadmaps-section">
        <h2>Career Roadmaps</h2>
  
        <!-- Roadmap Categories -->
        <div class="card roadmap-category" id="tech-career">
            <div class="card-tile">
                <h3>Tech Career Roadmap</h3>
            </div>
            <div class="card-text">
                <ul>
                    <li>Basic Programming (Python, JavaScript)</li>
                    <li>Advanced Topics (Data Structures, Algorithms)</li>
                    <li>Specializations (AI, Web Development, Data Science)</li>
                    <li>Portfolio Building</li>
                    <li>Interview Preparation</li>
                </ul>
                <a href="https://roadmap.sh/computer-science" class="roadmap-button">View Full Roadmap</a>
            </div>
        </div>

        <!-- Additional Tech Career Roadmaps -->
        <div class="roadmap-category" id="web-development">
            <h3>Web Development Roadmap</h3>
            <ul>
                <li>HTML, CSS, and JavaScript</li>
                <li>Front-End Frameworks (React, Vue, Angular)</li>
                <li>Back-End Technologies (Node.js, Express)</li>
                <li>Databases (SQL, NoSQL)</li>
                <li>Full Stack Development</li>
            </ul>
            <a href="/roadmap/web-development" class="roadmap-button">View Full Roadmap</a>
        </div>

        <div class="roadmap-category" id="data-science">
            <h3>Data Science Roadmap</h3>
            <ul>
                <li>Python for Data Science</li>
                <li>Data Analysis & Visualization</li>
                <li>Machine Learning Algorithms</li>
                <li>Deep Learning (TensorFlow, PyTorch)</li>
                <li>Big Data Technologies (Hadoop, Spark)</li>
            </ul>
            <a href="/roadmap/data-science" class="roadmap-button">View Full Roadmap</a>
        </div>

        <div class="roadmap-category" id="ai-machine-learning">
            <h3>AI and Machine Learning Roadmap</h3>
            <ul>
                <li>Introduction to AI and ML</li>
                <li>Supervised & Unsupervised Learning</li>
                <li>Neural Networks and Deep Learning</li>
                <li>Natural Language Processing (NLP)</li>
                <li>AI Ethics and Bias</li>
            </ul>
            <a href="/roadmap/ai-machine-learning" class="roadmap-button">View Full Roadmap</a>
        </div>

        <div class="roadmap-category" id="cybersecurity">
            <h3>Cybersecurity Roadmap</h3>
            <ul>
                <li>Networking and Protocols</li>
                <li>Ethical Hacking & Penetration Testing</li>
                <li>Cryptography</li>
                <li>Incident Response and Management</li>
                <li>Security Certifications (CEH, CISSP)</li>
            </ul>
            <a href="/roadmap/cybersecurity" class="roadmap-button">View Full Roadmap</a>
        </div>

        <div class="roadmap-category" id="cloud-computing">
            <h3>Cloud Computing Roadmap</h3>
            <ul>
                <li>Cloud Basics (AWS, Azure, GCP)</li>
                <li>Cloud Services (Compute, Storage, Networking)</li>
                <li>DevOps and CI/CD</li>
                <li>Containerization (Docker, Kubernetes)</li>
                <li>Cloud Security</li>
            </ul>
            <a href="/roadmap/cloud-computing" class="roadmap-button">View Full Roadmap</a>
        </div>

        <div class="roadmap-category" id="mobile-development">
            <h3>Mobile Development Roadmap</h3>
            <ul>
                <li>Mobile Development Basics (Java, Kotlin, Swift)</li>
                <li>Android Development</li>
                <li>iOS Development (Swift, Objective-C)</li>
                <li>Cross-Platform Development (Flutter, React Native)</li>
                <li>App Monetization and Marketing</li>
            </ul>
            <a href="/roadmap/mobile-development" class="roadmap-button">View Full Roadmap</a>
        </div>

        <div class="roadmap-category" id="game-development">
            <h3>Game Development Roadmap</h3>
            <ul>
                <li>Game Design Basics</li>
                <li>Unity3D and Unreal Engine</li>
                <li>Game Programming (C#, C++)</li>
                <li>Game Monetization</li>
                <li>Virtual and Augmented Reality (VR/AR)</li>
            </ul>
            <a href="/roadmap/game-development" class="roadmap-button">View Full Roadmap</a>
        </div>

        <div class="roadmap-category" id="devops">
            <h3>DevOps Roadmap</h3>
            <ul>
                <li>Version Control (Git)</li>
                <li>Continuous Integration and Continuous Deployment (CI/CD)</li>
                <li>Infrastructure as Code (Terraform, Ansible)</li>
                <li>Monitoring and Logging</li>
                <li>Container Orchestration (Kubernetes)</li>
            </ul>
            <a href="/roadmap/devops" class="roadmap-button">View Full Roadmap</a>
        </div>

        <div class="roadmap-category" id="blockchain">
            <h3>Blockchain Development Roadmap</h3>
            <ul>
                <li>Blockchain Fundamentals</li>
                <li>Smart Contracts (Ethereum, Solidity)</li>
                <li>Cryptocurrency and Wallets</li>
                <li>Decentralized Applications (DApps)</li>
                <li>Blockchain Security</li>
            </ul>
            <a href="/roadmap/blockchain" class="roadmap-button">View Full Roadmap</a>
        </div>

    </div>
</body>

<style>
    /* General Styles */
    .roadmaps-section {
        margin-top: 30px;
    }

    .roadmap-category {
        margin-bottom: 20px;
        padding: 20px;
        border: 1px solid #ddd;
        border-radius: 5px;
        background-color: #fff;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

    .roadmap-category h3 {
        font-size: 1.5rem;
        margin-bottom: 10px;
    }

    .roadmap-category ul {
        list-style-type: none;
        padding-left: 0;
    }

    .roadmap-category ul li {
        margin: 5px 0;
        font-size: 1rem;
    }

    /* Button Styling */
    .roadmap-button {
        display: inline-block;
        margin-top: 10px;
        padding: 10px 20px;
        background-color: #007bff;
        color: #fff;
        text-decoration: none;
        font-size: 1rem;
        border-radius: 4px;
        transition: background-color 0.3s, box-shadow 0.3s ease-in-out;
    }

    /* Button Hover Effect */
    .roadmap-button:hover {
        background-color: #0056b3;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }

    /* Mobile and Tablet Styling */
    @media (max-width: 767px) {
        .roadmap-category {
            padding: 15px;
        }
    }
</style>
