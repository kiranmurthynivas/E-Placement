<% layout("/layouts/boilerplate") %>
<body>
    <div class="row mt-3">
        <div class="col-6 offset-3">
    <div class="container mt-4">
        <h1>Create a New Notice</h1>
        <form action="/notice" method="POST">
            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input name="notice[title]" placeholder="Enter  title" type="text" class="form-control" required />
            </div>

            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <textarea name="notice[description]" placeholder="Enter  description" class="form-control" required></textarea>
            </div>

            <div class="mb-3">
                <label for="link" class="form-label">Attach the file link</label>
                <input name="notice[link]" placeholder="enter  file link" type="text" class="form-control" />
            </div>
            
            <button class="btn btn-primary">Send Notice</button>
        </form>
        </div>
        </div>
    </div>
</body>

